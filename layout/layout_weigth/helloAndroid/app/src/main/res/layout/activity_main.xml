<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:weightSum="10"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<!--2-3-4-1-->
    <LinearLayout

        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/text1.1"
            android:text="01"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="#2D2295"
            android:background="#E1B8B8"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/text1.2"
            android:text="1.1"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="#2D2295"
            android:background="#7A5A5A"
            />
    </LinearLayout
        >
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/text2.1"
            android:text="02"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="#2D2295"
            android:background="#E3BC44"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/text2.2"
            android:text="2.2"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="#2D2295"
            android:background="#EAECB1"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/text2.3"
            android:text="2.3"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="#2D2295"
            android:background="#C7D50E"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/text3.1"
            android:text="02"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="#2D2295"
            android:background="#E3BC44"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/text3.2"
            android:text="2.2"
            android:textSize="30sp"
            android:fontFamily="monospace"
            android:textColor="#2D2295"
            android:background="#EAECB1"
            />

    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/text4"
        android:text="04"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:textColor="#2D2295"
        android:background="#08EC39"
        />

</LinearLayout>