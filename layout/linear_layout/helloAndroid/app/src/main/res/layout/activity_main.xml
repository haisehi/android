<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text1"
        android:text="linear layout"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:textColor="#2D2295"
        android:background="#E1B8B8"
        />
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text2"
        android:text="Hello android"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:textColor="#F8F7F7"
        android:background="#F30000"
        />
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text3"
        android:text="I write application by java"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:textColor="#2D2295"
        android:background="#EC9F08"
        />
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text4"
        android:text="welcome to android studio code"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:textColor="#2D2295"
        android:background="#08EC39"
        />

</LinearLayout>